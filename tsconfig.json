{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "declarationDir": "./dist/types/",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ESNext"]
  },
  "include": [
    "src/**/*"
  ]
}